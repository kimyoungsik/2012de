<!-- friend -->
<div class="main-box" id="friend">
	<div class="item-title">
		<h2><%= @user.name %> 님의 친구들</h2> 
		<span><%= @user.friends.count %>명</span>
	</div>
	
	<% if current_user == @user && @user.friends.empty? %>
		<div class="item-box">
			<a class="item-subtitle-box">
				*아직 친구가 없으신가요? 새로운 친구를 추가해보세요.
			</a>
		</div>
	
	<% else %>
		<div id="friends">
			<%= render :partial => @friends, :locals => { :list => true } %>
		</div>
		<%= will_paginate @friends %>
		<div class="clear"></div>
	<% end %>
</div>